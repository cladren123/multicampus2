<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exam.FragmentExam01"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fragmentExamBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="첫번째뷰"
            android:layout_weight="1"
            android:background="#7C7575"
            android:onClick="btn_click"
            android:tag="0"
            />

        <Button
            android:id="@+id/fragmentExamBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="두번째뷰"
            android:layout_weight="1"
            android:background="#7C7575"
            android:onClick="btn_click"
            android:tag="1"/>

        <Button
            android:id="@+id/fragmentExamBtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="세번째뷰"
            android:layout_weight="1"
            android:background="#7C7575"
            android:onClick="btn_click"
            android:tag="2"/>



    </LinearLayout>

    <FrameLayout
        android:id="@+id/exam_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fragmentExamContainer"
            android:name="com.example.fragment.exam.ViewFragment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>




</LinearLayout>