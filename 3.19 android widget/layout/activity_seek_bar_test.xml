<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SeekBarTest">

    <TextView
        android:id="@+id/txtseekinfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="seek1 info : "
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txtseekinfo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="seek2 info : "
        android:textSize="20sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="5" />

    <Button
        android:id="@+id/btn_seekup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="증가" />

    <Button
        android:id="@+id/btn_seekdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="감소" />

    <Button
        android:id="@+id/btn_seeksetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="값설정" />

    <Button
        android:id="@+id/btn_seekgetValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재값 가져오기" />

</LinearLayout>