<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/rect01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#e91c63"
        android:layout_centerInParent="true">

    </TextView>

    <TextView
        android:id="@+id/rect02"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#A084D1"
        android:layout_above="@id/rect01"
        android:layout_centerInParent="true"
        >

    </TextView>

    <TextView
        android:id="@+id/rect03"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#F3DA05"
        android:layout_below="@id/rect01"
        android:layout_centerInParent="true"
        >

    </TextView>

    <TextView
        android:id="@+id/rect04"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FF5722"
        android:layout_toRightOf="@id/rect01"
        android:layout_centerInParent="true"
        >

    </TextView>

    <TextView
        android:id="@+id/rect05"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#009688"
        android:layout_toLeftOf="@id/rect01"
        android:layout_centerInParent="true"
        >

    </TextView>

    <TextView
        android:id="@+id/rect06"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#041DA8"
        android:layout_toLeftOf="@id/rect01"
        android:layout_above="@id/rect01"
        >

    </TextView>

    <TextView
        android:id="@+id/rect07"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#019A07"
        android:layout_above="@id/rect01"
        android:layout_toRightOf="@id/rect01"
        >

    </TextView>

    <TextView
        android:id="@+id/rect08"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#E31304"
        android:layout_toRightOf="@id/rect01"
        android:layout_below="@id/rect01"


        >

    </TextView>

    <TextView
        android:id="@+id/rect09"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#E6E6E6"
        android:layout_toLeftOf="@id/rect01"
        android:layout_below="@id/rect01"

        >

    </TextView>





</RelativeLayout>